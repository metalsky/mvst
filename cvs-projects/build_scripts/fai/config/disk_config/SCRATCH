# generic disk configuration for one small disk
# disk size from 500Mb up to what you can buy today
#
# <type> <mountpoint> <size in mb> [mount options]     [;extra options]

disk_config disk1
primary  /              3000      rw,errors=remount-ro ; -j ext3
logical  /tmp		1000	  rw		; ext2
logical  /ccache	10000     rw		; ext2
logical  /local         30000     rw	        ; ext2
logical  /chroot	3000-	  rw		; ext2
logical  swap           2000      rw                   
