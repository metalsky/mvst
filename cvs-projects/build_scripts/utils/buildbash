# ~/.bashrc: executed by bash(1) for non-login shells.
# see /usr/share/doc/bash/examples/startup-files (in the package bash-doc)
# for examples

export TERM=xterm-color
export PYTHONPATH=/home/build/build_scripts/rpmlint/rpmlint-0.9.1-mv/:/home/build/bin/resourceManager/:/home/build/bin/common:/home/build/bin/utils:/home/build/bin/utils/retention
# removed glue from the license server list... list wasn't working anyway:
export LM_LICENSE_FILE=27000@overlord
export CVSROOT=:ext:build@cvs.sh.mvista.com:/mnt/cvs
export PATH==/usr/local/bin:/usr/bin:/bin:/usr/games:/home/build/bin/utils:/home/build/bin:/sbin:
export CVS_RSH=ssh

# check the window size after each command and, if necessary,
# update the values of LINES and COLUMNS.
shopt -s checkwinsize

# build aliases:
